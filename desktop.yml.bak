is_desktop: true

screen:
    dpi: 109
    x: 3840
    y: 2160

x11:
    dpi: 96

cursor:
    theme: Vanilla-DMZ-AA
    size: 22

gtk:
    widget-theme: Adapta-Nokto-Eta
    icon-theme: Papirus-Adapta-Nokto
    font-size: 12

qt:
    widget-theme: Fusion
    icon-theme: Papirus

font:
    hint-enable: false
    hint-style: hintnone
    mono: Inconsolata
    sans: SF UI Text
    jpn: IPAGothic
    kor: NanumGothic
    ico: Material Icons
    sym: Symbola

kitty:
    font-size: 13

urxvt:
    font-size: 13

rofi:
    font-size: 13

dunst:
    font-size: 13

zathura:
    font-size: 13

st:
    font-size: 20

bspwm:
    desktop_names: "1 2 3 4 5 6 0"
    border_width: 1
    window_gap: 30
    window_padding: 
        top: 20
        right: 20
        bottom: 20
        left: 20

polybar:
    symbol-size: 18
    symbol-hint: slight
    font-size: 14
    font-hint: slight
    bar:
        padding-y: 10
        height: 20
    bar-right:
        modules-right: cpu memory volume
        modules-center: date
        padding-x: 10
        width: 3820
    bar-left:
        modules-left: bspwm
        width: 500

