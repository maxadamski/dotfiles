# vim: ft=xf86conf

Section "ServerFlags"
    Option         "DontZap" "false"
EndSection

Section "InputClass"
    Identifier         "Touchpad"
    Driver             "libinput"
    MatchIsTouchpad    "on"
    Option             "Tapping" "true"
    Option             "ClickMethod" "clickfinger"
    Option             "NaturalScrolling" "true"
    Option             "MiddleEmulation" "false"
    Option             "AccelSpeed" "0.8"
EndSection

Section "InputClass"
	Identifier "Joystick"
	MatchIsJoystick "yes"
	MatchDevicePath "/dev/input/event*"
	Driver "joystick"
	Option "StartMouseEnabled" "false"
	Option "StartKeysEnabled" "false"
EndSection

{{#is_desktop}}
Section "Monitor"
	Identifier	"Monitor0"
	VendorName	"SAMSUNG"
	ModelName	"UE40KU6000W"
	DisplaySize	890 500
	Horizsync	15.0 - 135.0
	VertRefresh	24.0 - 75.0
	Option	"DPMS"

	# RB: CVT-R reduced blanking, O: optimized for video
	# add fixed video modes* 
	Modeline "3840x2160_60_RB"	533.28 3840 3888 3920 4000 2160 2183 2188 2222 +hsync -vsync
	Modeline "3840x2160_60_RBO"	532.75 3840 3888 3920 4000 2160 2183 2188 2222 +hsync -vsync
	Modeline "1920x1080_60_RB"	139.03 1920 1968 2000 2080 1080 1103 1108 1114 +hsync -vsync
	Modeline "1920x1080_60_RBO"	138.89 1920 1968 2000 2080 1080 1103 1108 1114 +hsync -vsync
EndSection

Section "Device"
	Identifier	"Device0"
	VendorName	"NVIDIA"
	BoardName	"GeForce GTX 760"
	Driver "nvidia"
	# allow loading custom modelines*
	Option "ModeValidation" "AllowNonEdidModes"
	# fix the screen tearing issues*
	Option "ForceFullCompositionPipeline" "On"
	# make sure to use proper color
	Option "ColorSpace" "YCbCr444"
	Option "Dac8Bit" "true"
EndSection

Section "Screen"
	Identifier "Screen0"
	Device "Device0"
	Monitor "Monitor0"
	Option "metamodes" "3840x2160_60_RB +0+0 {ForceCompositionPipeline=On, ForceFullCompositionPipeline=On}"
	Option "TripleBuffer" "on"
	DefaultDepth 24
	SubSection "Display"
		Depth	24
		Modes	"3840x2160_60_RB"
	EndSubSection
EndSection
{{/is_desktop}}
