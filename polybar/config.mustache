; vim:ft=dosini

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[colors]
background = #00000000
foreground = {{special.background}}
dimmed = {{special.background}}
alert = {{colors.color1}}
;
[bar]
width = 100%
height = {{polybar.bar-height}}
radius = 0
offset-y = {{polybar.bar-padding-top}}
fixed-center = true
padding-right = 0
padding-left = 0
module-margin-right = 2
module-margin-left = 1
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = SF UI Text:style=medium:pixelsize={{polybar.font-size.latin}};hinting=slight;3
font-1 = IPAGothic:pixelsize={{polybar.font-size.latin}};hinting=slight;3
font-2 = Material Icons:pixelsize={{polybar.font-size.symbol}};hinting=slight;6
font-3 = Symbola:pixelsize={{polybar.font-size.symbol}};hinting=slight;0
wm-restack = bspwm
override-redirect = true
enable-ipc = true
tray-maxsize = 24
tray-padding = 10

[bar/left]
inherit = bar
modules-left = bspwm
width = 500px
offset-x = 0px
font-0 = Symbola:pixelsize={{polybar.font-size.symbol}};hinting=none;3

[bar/right]
width = {{polybar.bar-right-width}}px
offset-x = 10px
inherit = bar
modules-center = date
modules-right = {{polybar.modules-right}}
tray-position = right

[module/bspwm]
type = internal/bspwm
format = <label-state>

label-focused = ‚óÜ
label-focused-foreground = ${colors.foreground}
