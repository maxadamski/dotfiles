[module/cpu]
type = internal/cpu
interval = 2
label = Óå¢  %percentage%%

[module/memory]
type = internal/memory
interval = 2
label = Óîª  %gb_used% 

[module/date]
type = internal/date
interval = 5
time = %A, %B %I:%M %p
time-alt = %A, %d-%m-%Y %I:%M %p
